{
  "compileOnSave": false,
  "compilerOptions": {
    "noImplicitAny": false,
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "./dist/ts",
    "types": [
      "mocha",
      "chai"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "packages/fast-crud/src/d/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "typedocOptions": {
    "entryPoints": ["./packages/fast-crud/src/d.ts/index.ts"],
    "out": "./docs/zh/api/d.ts",
    "includeDeclarations": true,
    "excludeExternals": true,
    "excludePrivate": true,
    "excludeProtected": true,
    "toc": true,
    "hideGenerator": true,
    "theme": "markdown",
    "readme": "./INTRO.md"
  }
}
